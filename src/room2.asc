function oInodoro_Interact()
{
  cEgo.Walk(580, 520, eBlock, eWalkableAreas);
  Wait(20);
  cEgo.Walk(cEgo.x-1, cEgo.y);
  Wait(40);
  cEgo.Walk(cEgo.x+3, cEgo.y);
  Wait(20);
  cEgo.Say("No me da para pelar aca...");
  cEgo.ChangeRoom(4, 200, 550);
}
